---
interface Props {
    title: string
    description: string
    date: string
  }
  
  const { title, description, date } = Astro.props
---
  
<li class="mb-10 ms-4">
    <div class="absolute w-3 h-3 bg-[#B686B5] rounded-full mt-1.5 -start-1.5 border border-[#B686B5]"></div>
    <time class="mb-1 text-base leading-none text-[#918491] font-semibold  ">{date}</time>
    <h1 class="text-2xl md:text-4xl font-semibold text-[#FFEAFF] mt-3" >{title}</h1>
    <p class="mb-4 text-base font-normal text-[#7B7B7B] text-pretty mt-2">{description}</p>
    
</li>