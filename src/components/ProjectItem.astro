---
import LinkButton from "./LinkButton.astro"
import Link from "./icons/Link.astro"
interface Technology {
    icon: any;
    color: string;
}

// Define el tipo para el proyecto
interface Props {
    title: string;
    description: string;
    technologies: Technology[];
    code: string;
    image: string;
}
  const { title, description,code, image, technologies } = Astro.props
---

<li class="my-6 flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0" >
    <div class="w-full md:w-1/2">
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
          <img alt="title" class="object-cover object-top w-full h-1/2     transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
        </div>
      </div>
    <div class="ml-4 w-full md:w-1/2 md:max-w-lg">
        <h1 class="text-4xl text-[#B686B5] font-bold mb-4">{title}</h1>
        <p class="text-pretty text-lg text-[#FFEAFF] ">{description}</p>
        <ol class="flex mt-5 mb-5 gap-x-2 ">
            { technologies.map((technology)=>(
            <li class={`rounded-full p-1 border-2 border-[${technology.color}]`}>
                <technology.icon class="h-6 w-6"/>
            </li>))}
        </ol>
        <a class="text-[#7B7B7B] border-2 border-[#484848]  rounded-lg text-gl px-1.5 py-1 text-center mb-1 inline-flex justify-center gap-x-1 font-bold"
          href="">
        Code
        <Link class="h-7 w-7"/>
        </a>
    </div>
</li>